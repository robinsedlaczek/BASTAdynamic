@page
@model UserDetailModel
@{
    ViewData["Title"] = "User Management";
}

            @{
                var mode = Request.Query.FirstOrDefault(q => q.Key.Equals("mode"));
                string submitLabel = "";
            
            if (mode.Value == "new")
            {
                submitLabel = "Create";    
            }

            if (mode.Value == "edit")
            {
                submitLabel = "Update";
            }

            if (mode.Value == "delete")
            {submitLabel = "Delete";}
                
            }
            
            <form method="POST">
                <label>Firstname</label>
                <input type="text" asp-for="UserData.FirstName" />

                <label>Lastname</label>
                <input type="text" asp-for="UserData.LastName" />

                <label>Address</label>
                <input type="text" asp-for="UserData.Address" />

                <label>Company</label>
                <input type="text" asp-for="UserData.Company" />

                <input type="hidden" asp-for="UserData.Id" />

                <input type="submit" class="btn btn-default" value="@submitLabel">
                <a class="btn btn-default" href="/users">
                        Close
                    </a>
            </form>
