@page
@model UsersModel
@{
    ViewData["Title"] = "User Management";
}

<table>
@foreach (var user in await Model.Render())
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td><a class="btn btn-default" href="/user-detail?mode=edit&id=@user.Id">
                        Edit
                    </a></td>
                    <td><a class="btn btn-default" href="/user-detail?mode=delete&id=@user.Id">
                        Delete
                    </a></td>
                </tr>
            }
            </table>

            <a class="btn btn-default" href="/user-detail?mode=new">
                        New User
                    </a>

